{{#each this}}
<div >
    <div class="country__list">
        <img src="{{flags.svg}}" alt="flag of country" class="country__flag">
        <h1 class="country__name">{{name.official}}</h1>
    </div>
    <p class="country__properties">Capital:<span class="country__properties--description">{{capital}}</span></p>
    <p class="country__properties">Population:<span class="country__properties--description">{{population}}</span></p>
    <p class="country__properties">Language:<span class="country__properties--description">{{#each languages}}
        {{#if @index}},{{/if}} {{this}}{{/each}}</span></p>
</div>
{{/each}}